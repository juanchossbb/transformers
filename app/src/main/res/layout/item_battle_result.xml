<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_battle_result_image"
        android:layout_width="@dimen/team_icon_size_small"
        android:layout_height="@dimen/team_icon_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_battle_result_transformer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trasformer"
        app:layout_constraintBottom_toBottomOf="@id/iv_battle_result_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_battle_result_image"
        app:layout_constraintTop_toTopOf="@id/iv_battle_result_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>